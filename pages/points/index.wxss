.points-page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.points-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: white;
}

.points-balance, .points-level {
  text-align: center;
}

.points-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.points-label, .level-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.level-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.sign-in-section {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 10rpx;
  text-align: center;
}

.sign-in-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.sign-in-btn[disabled] {
  background: #ccc;
}

.sign-in-info {
  font-size: 24rpx;
  color: #666;
}

.tab-bar {
  display: flex;
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 10rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #667eea;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #667eea;
  border-radius: 2rpx;
}

.tab-content {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
}

.record-list {
  padding: 0;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
}

.record-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-amount {
  font-size: 30rpx;
  font-weight: bold;
}

.record-amount.income {
  color: #52c41a;
}

.record-amount.expense {
  color: #ff4d4f;
}

.exchange-list {
  padding: 0;
}

.exchange-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.exchange-item:last-child {
  border-bottom: none;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.item-price {
  font-size: 26rpx;
  color: #667eea;
}

.exchange-btn {
  background: #667eea;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  font-size: 24rpx;
}